{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "vue/multi-word-component-names": ["error", {
            "ignores": ["Header", "Footer", "index", "Navigation", "gallery", "Gallery", "Content"]
          }],
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "eol-last": ["error", "always"]
    }
}
